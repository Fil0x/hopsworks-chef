# Load balancer configuration
worker.list=loadbalancer
 
# Configure hwi1
worker.hwi1.type=ajp13
worker.hwi1.host=192.168.1.200
# Port as per the system property AJP_PORT
worker.hwi1.port=8011
worker.hwi1.lbfactor=50
worker.hwi1.cachesize=10
worker.hwi1.cache_timeout=600
worker.hwi1.socket_keepalive=1
worker.hwi1.socket_timeout=300
 
# Configure hwi2
worker.hwi2.type=ajp13
worker.hwi2.host=192.168.1.201
worker.hwi2.port=8012
worker.hwi2.lbfactor=50
worker.hwi2.cachesize=10
worker.hwi2.cache_timeout=600
worker.hwi2.socket_keepalive=1
worker.hwi2.socket_timeout=300
 
# The balancing will be done using round-robin algorithm
worker.loadbalancer.type=lb
 
# Participating worker instances
worker.loadbalancer.balanced_workers=hwi1,hwi2
 
# Add the status worker to the worker list
worker.list=jk-status
# Define a 'jk-status' worker using status
worker.jk-status.type=status